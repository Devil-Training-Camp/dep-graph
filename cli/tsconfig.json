{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "core": ["../core/dist"],
      "web": ["../web/dist"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
